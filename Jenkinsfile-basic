pipeline {
    agent any 

    environment {
        AWS_ACCESS_KEY_ID = 'AKIAW3MD6N7C2QNPV57R'
        AWS_SECRET_ACCESS_KEY = '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'
        AWS_DEFAULT_REGION = 'eu-central-1'
        IMAGE_NAME = 'public.ecr.aws/m9n8x5g7/ankit-docker-project/firstproject' 
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build Image') {
            steps {
                 script {
                    docker.build("${IMAGE_NAME}:latest")
                }            }
        }
        stage('Login to ECR') {
            steps {
                withAWS(credentials: 'aws-credentials') {
                    sh 'aws ecr get-login-password --region ${AWS_DEFAULT_REGION} | docker login --username AWS --password-stdin ${IMAGE_NAME}'                }
            }
        }
        stage('Push to ECR') {
            steps {
                script {
                    docker.withRegistry("https://${IMAGE_NAME}", 'aws-credentials') {
                        docker.image("${IMAGE_NAME}:latest").push()
                    }
                }
            }
        }
    }
}
